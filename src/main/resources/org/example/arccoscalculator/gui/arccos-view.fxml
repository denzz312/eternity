<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.arccoscalculator.gui.ArccosController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Enter a value between -1 and 1:"/>
    <TextField fx:id="inputField" promptText="e.g., 0.5"/>
    <Button text="Calculate Arccos" onAction="#onCalculateClick"/>
    <Label fx:id="resultLabel" style="-fx-font-size: 14px;" textFill="black"/>
</VBox>
